{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build/src",
    "rootDir": "src",
    "baseUrl": "./src",
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "exclude": ["node_modules", "build"]
}
